               $(VBOX_CORE_DOXYFILE_OUTPUT)/errors
	$(CAT) $(VBOX_CORE_DOXYFILE_OUTPUT)/errors2
	$(SED) -e "/[^ ]/q 1" $(VBOX_CORE_DOXYFILE_OUTPUT)/errors2
	$(APPEND) $@

