[Version]
Signature         = "$Windows NT$"
Provider          = %ORACLE%
;edit-DriverVer = 08/26/2008,2.00.0000
DriverPackageType = KernelService
Class             = System
ClassGuid         = {4d36e97d-e325-11ce-bfc1-08002be10318}
;cat CatalogFile = VBoxUSBMon.cat

[Manufacturer]
;x86 %ORACLE%=ORACLE
;amd64 %ORACLE%=ORACLE, NTamd64

;x86   [ORACLE]
;amd64 [ORACLE.NTamd64]
%VBoxUSBMon.DrvDesc%=VBoxUSBMon, USB\VBoxUSBMon

[VBoxUSBMon]
CopyFiles = VBoxUSBMon.CopyFiles

[DefaultInstall.NT]
CopyFiles = VBoxUSBMon.CopyFiles

[VBoxUSBMon.CopyFiles]
VBoxUSBMon.sys

[VBoxUSBMon.Services]
AddService = VBoxUSBMon, 0x00000002, VBoxUSBMon.AddService, VBoxUSBMon.AddEventLog

[DefaultInstall.NT.Services]
AddService = VBoxUSBMon, 0x00000002, VBoxUSBMon.AddService, VBoxUSBMon.AddEventLog

[VBoxUSBMon.AddService]
DisplayName    = %VBoxUSBMon.SvcDesc%
ServiceType    = 1                  ; SERVICE_KERNEL_DRIVER
;StartType      = 3                  ; SERVICE_DEMAND_START
StartType      = 1                  ; autostart to fix Vista problem
ErrorControl   = 1                  ; SERVICE_ERROR_NORMAL
ServiceBinary  = %12%\VBoxUSBMon.sys

[VBoxUSBMon.AddEventLog]
AddReg         = VBoxUSBMon.AddEventLogRegistry

[VBoxUSBMon.AddEventLogRegistry]
HKR,,EventMessageFile,0x00020000,"%%SystemRoot%%\System32\IoLogMsg.dll"
HKR,,TypesSupported,0x00010001,7

[SourceDisksNames]
1 = %VBoxUSBMon.MediaDesc%

[SourceDisksFiles]
VBoxUSBMon.sys = 1

[DestinationDirs]
DefaultDestDir = 12   ; DIRID_DRIVERS

[Strings]
ORACLE               = "Oracle Corporation"
VBoxUSBMon.SvcDesc   = "VirtualBox USB Monitor Driver"
VBoxUSBMon.DrvDesc   = "VirtualBox USB Monitor Driver"
VBoxUSBMon.MediaDesc = "VirtualBox USB Monitor Driver Disc"

; Useful constants
SERVICE_KERNEL_DRIVER = 1
SERVICE_DEMAND_START  = 3
SERVICE_ERROR_IGNORE  = 0
REG_EXPAND_SZ         = 0x00020000
REG_DWORD             = 0x00010001
