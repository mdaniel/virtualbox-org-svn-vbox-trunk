#StorageLibNoDB_DEFS     = IN_VBOXDDU VBOX_HDD_NO_DYNAMIC_BACKENDS
#StorageLibNoDB_SOURCES  = \
#	$(StorageLib_SOURCES)

# generate rules
include $(FILE_KBUILD_SUB_FOOTER)

