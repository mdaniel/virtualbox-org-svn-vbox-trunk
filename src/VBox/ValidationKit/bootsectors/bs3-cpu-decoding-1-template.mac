%else
        mov     xAX, [xBP + xCB + cbCurRetAddr]
        movupd  [xAX], xmm0
%endif

        leave
        BS3_CALL_CONV_EPILOG 1
        BS3_HYBRID_RET
BS3_PROC_END_CMN   bs3CpuDecoding1_SaveXmm0


%endif

