VBox-liblzma-static_TEMPLATE = VBoxR3StaticNonPedantic
VBox-liblzma-static_DEFS = $(VBox-liblzma_DEFS)
VBox-liblzma-static_INCS = $(VBox-liblzma_INCS)
VBox-liblzma-static_CFLAGS.linux   = $(VBox-liblzma_CFLAGS.linux)
VBox-liblzma-static_CFLAGS.solaris = $(VBox-liblzma_CFLAGS.solaris)
VBox-liblzma-static_CFLAGS.darwin  = $(VBox-liblzma_CFLAGS.darwin)
VBox-liblzma-static_CFLAGS.os2     = $(VBox-liblzma_CFLAGS.os2)
ifdef VBOX_WITH_NOCRT_STATIC
 VBox-liblzma-static_DEFS += IPRT_NO_CRT_FOR_3RD_PARTY
endif
VBox-liblzma-static_SOURCES = $(VBox-liblzma_SOURCES)

ifdef VBOX_WITH_32_ON_64_MAIN_API # 32-bit edition.
 LIBRARIES += VBox-liblzma-x86
 VBox-liblzma-x86_TEMPLATE = VBoxR3DllNonPedantic-x86
 VBox-liblzma-x86_EXTENDS = VBox-liblzma
endif


include $(FILE_KBUILD_SUB_FOOTER)

